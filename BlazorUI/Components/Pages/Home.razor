@page "/"
@using System.Security.Claims
@using System.IdentityModel.Tokens.Jwt

<PageTitle>Home - BlazorUI</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User.Claims.First(x => x.Type == JwtRegisteredClaimNames.Name).Value.</p>
    </Authorized>
    <NotAuthorized>
        <p>Please login.</p>
    </NotAuthorized>
</AuthorizeView>