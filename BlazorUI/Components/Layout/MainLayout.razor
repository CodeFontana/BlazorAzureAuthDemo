@inherits LayoutComponentBase

<CascadingValue Name="LayoutName" Value="@LayoutName">
    <div style="min-width: 350px;">
        <Navbar />
        <main class="container my-3 pt-5">
            @Body
        </main>
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </div>
</CascadingValue>

@code {
    private const string LayoutName = "MainLayout";
}
